########################################
# Local disk cache (per-machine)
########################################
build --disk_cache=~/.bazel-cache
test  --disk_cache=~/.bazel-cache

########################################
# Shared remote cache (TEAM + CI)
########################################
build --remote_cache=http://localhost:8080
test  --remote_cache=http://localhost:8080

build --bes_results_url=https://app.buildbuddy.io/invocation/
build --bes_backend=grpcs://remote.buildbuddy.io
build --remote_cache=grpcs://remote.buildbuddy.io
build --remote_timeout=10m

########################################
# CI stability & debugging
########################################
build --keep_going
test  --test_output=errors
