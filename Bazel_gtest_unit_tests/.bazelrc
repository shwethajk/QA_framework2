########################################
# BuildBuddy Remote Cache + BES
########################################

# Shared remote cache (local + CI)
build --remote_cache=grpcs://remote.buildbuddy.io
test  --remote_cache=grpcs://remote.buildbuddy.io

# Upload local results so others can reuse them
build --remote_upload_local_results=true
test  --remote_upload_local_results=true

# BuildBuddy UI (BES)
build --bes_backend=grpcs://remote.buildbuddy.io
build --bes_results_url=https://app.buildbuddy.io/invocation/

# Stability
build --remote_timeout=10m
test  --test_output=errors
build --keep_going
